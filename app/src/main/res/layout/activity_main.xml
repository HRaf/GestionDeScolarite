<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"

    tools:context=".MainActivity"
    tools:openDrawer="start">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/studentsview"
        android:layout_width="139dp"
        android:layout_height="164dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="12dp"

            >


            <ImageView
                android:layout_width="119dp"
                android:layout_height="94dp"
                android:src="@drawable/exams" />


            <TextView
                android:id="@+id/studentstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Students"
                android:textColor="#00B0FF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/calendarview"
        android:layout_width="139dp"
        android:layout_height="164dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginRight="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="12dp"

            >


            <ImageView
                android:layout_width="119dp"
                android:layout_height="94dp"
                android:src="@drawable/ic_calendar_colored" />


            <TextView
                android:id="@+id/tn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Calendar"
                android:textColor="#00B0FF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/programsview"
        android:layout_width="139dp"
        android:layout_height="164dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginRight="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="12dp"

            >


            <ImageView
                android:layout_width="119dp"
                android:layout_height="94dp"
                android:src="@drawable/ic_programs_colored" />


            <TextView
                android:id="@+id/programstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Programs"
                android:textColor="#00B0FF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/modulesview"
        android:layout_width="139dp"
        android:layout_height="164dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="12dp"

            >


            <ImageView
                android:layout_width="119dp"
                android:layout_height="94dp"
                android:src="@drawable/ic_list_modules" />


            <TextView
                android:id="@+id/modulestitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Modules"
                android:textColor="#00B0FF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="333dp"
        android:layout_height="222dp"
        app:layout_constraintBottom_toTopOf="@+id/calendarview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214"
        android:background="@drawable/main_img"
        ></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu" />


</androidx.drawerlayout.widget.DrawerLayout>